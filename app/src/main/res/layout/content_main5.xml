<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main5Activity"
    tools:showIn="@layout/activity_main5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="1.1 Linear motion"
                android:textColor="#2196F3"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:text=" Speed and velocity\n\n
speed = distance/time\n
velocity = displacement/time\n
avg velocity = total displacement/time\n
Vab = Va - Vb"
                android:textColor="#000000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:text=" Acceleration\n\n
a = dv/dt\n
Equations of uniformly accelerated motion\n
1. v = u + at\n
2. s = ut + (1/2)a(t^2)\n
3. v^2 = u^2 + 2as"
                android:textColor="#000000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:text=" Distance travelled in nth second\n\n
Sn = u + (a/2)(2n - 1)"
                android:textColor="#000000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:text=" Motion under gravity\n\n
tA = u/g = sqrt(2h/g)\n
hmax = (u^2)/2g\n
In equations of motion a is replaced by\n
g or -g as per sign convention to get\n
equations of motion for motion under gravity"
                android:textColor="#000000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="1.2 Projectile motion"
                android:textColor="#2196F3"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:text=" Time of flight for projectile motion\n\n
T = 2usin(theta)/g\n"
                android:textColor="#000000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:text=" Maximum height in projectile motion\n\n
H = (u^2)sin^2(theta)/2g\n"
                android:textColor="#000000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:text=" Horizontal range in projectile motion\n\n
R = (u^2)sin2(theta)/g\n"
                android:textColor="#000000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:text=" Projectile motion on inclined plane\n\n
T = 2usin(A - B)\n
R = 2(u^2)sin(A - B)cos(A)/gcos(B)\n
x = 2(u^2)sin(A - B)cos(A)/gcos^2(B)\n
Rmax = (u^2)/g(1 + sin(B))\n
A = pi/4 + B/2"
                android:textColor="#000000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="1.3 Circular motion"
                android:textColor="#2196F3"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:text=" Kinematical equations in circular motion\n\n
1. w = w0 + (alpha)t\n
2. theta = (w0)t + (1/2)(alpha)t^2\n
3. w^2 = (w0)^2 + 2(alpha)theta"
                android:textColor="#000000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:text=" Non uniform horizontal circular motion\n\n
a = sqrt((aR^2 + aT^2))\n
aR = (v^2)/r, aT = r(alpha^2)\n
tan(phi) = aT/aR = r^2(alpha)/(v^2)"
                android:textColor="#000000"
                android:textSize="17dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>